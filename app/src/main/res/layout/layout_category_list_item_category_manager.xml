<RelativeLayout
	android:id="@+id/layout_category_list_item"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:paddingRight="@dimen/padding_right_category_list_item">


	<CheckedTextView
		android:id="@+id/text_category_list_item_name"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="?android:attr/listPreferredItemHeight"
		android:gravity="center_vertical"
		android:hint="@string/text_hint_category"
		android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
		android:singleLine="true"
		android:textSize="@dimen/text_size_category"/>

	<Button
		android:id="@+id/button_category_list_delete_category"
		style="@android:style/DeviceDefault.ButtonBar"
		android:layout_width="@dimen/button_size_big_horizontal"
		android:layout_height="@dimen/button_size_big_vertical"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:background="@drawable/ic_delete"
		android:focusable="false"/>

</RelativeLayout>
