<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                tools:context="org.rmit.hung.thingsdo.view.MainScreen">

	<ExpandableListView
		android:id="@+id/list_category"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/button_add_category"
		android:layout_alignParentTop="true"/>

	<Button
		android:id="@+id/button_add_category"
		style="@android:style/DeviceDefault.ButtonBar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:text="@string/button_add_category"/>

</RelativeLayout>
