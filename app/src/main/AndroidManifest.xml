<manifest
	package="org.rmit.hung.thingsdo"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.GET_ACCOUNTS"/>
	<uses-permission android:name="android.permission.READ_SMS"/>
	<uses-permission android:name="android.permission.READ_CONTACTS"/>
	<uses-permission android:name="android.permission.SEND_SMS"/>
	<uses-permission android:name="android.permission.USE_CREDENTIALS"/>
	<uses-sdk android:targetSdkVersion="L"/>

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">
		<receiver android:name=".model.NotificationReceiver"/>
		<service android:name=".model.SMSIntentService"
		         android:exported="false"/>

		<activity
			android:name="org.rmit.hung.thingsdo.view.MainScreen"
			android:configChanges="keyboardHidden|orientation|screenSize"
			android:label="@string/app_name"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>
		<activity
			android:name="org.rmit.hung.thingsdo.view.SplashScreen"
			android:configChanges="keyboardHidden|orientation|screenSize"
			android:label="@string/app_name"
			android:screenOrientation="portrait"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name="org.rmit.hung.thingsdo.view.EditTaskScreen"
			android:configChanges="keyboardHidden|orientation|screenSize"
			android:label="@string/title_activity_add_task_screen"
			android:parentActivityName="org.rmit.hung.thingsdo.view.MainScreen"
			android:screenOrientation="portrait">
		</activity>
		<activity
			android:name="org.rmit.hung.thingsdo.view.CategoryManagerScreen"
			android:configChanges="keyboardHidden|orientation|screenSize"
			android:label="@string/title_activity_category_manager_screen"
			android:parentActivityName="org.rmit.hung.thingsdo.view.MainScreen"
			android:screenOrientation="portrait">
		</activity>
		<activity
			android:name="org.rmit.hung.thingsdo.view.SettingsScreen"
			android:configChanges="keyboardHidden|orientation|screenSize"
			android:label="@string/title_activity_settings_screen"
			android:parentActivityName="org.rmit.hung.thingsdo.view.MainScreen"
			android:screenOrientation="portrait">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="org.rmit.hung.thingsdo.view.MainScreen"/>
		</activity>
	</application>

</manifest>
